<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    android:textDirection="rtl"
    tools:context="com.example.Dictoretto.Activities.BookActivity">


    <!--android:layout_above="@+id/linear_center"-->

    <LinearLayout
        android:id="@+id/linear_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="V"
                    android:textColor="#ffffff"
                    android:textSize="50sp" />
                <View
                    android:layout_gravity="center"
                    android:layout_width="25dp"
                    android:layout_height="7dp"
                    android:background="#ec0707"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ezeeta"
                android:textColor="#ffffff"
                android:textSize="50sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=".com"
                android:textColor="#e90b0b"
                android:textSize="25sp" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="مستقبل الرعاية الصحية"
            android:textColor="#ffffff"
            android:textSize="25sp" />



    </LinearLayout>


    <!--android:layout_centerInParent="true"-->

    <LinearLayout
        android:id="@+id/linear_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_up"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn_book_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/buttons"
            android:drawableStart="@drawable/arrow_left"
            android:drawableEnd="@drawable/watch"
            android:drawablePadding="8dp"
            android:padding="10dp"
            android:text="اختر بالمنطقة والتخصص"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/blue" />

        <Button
            android:id="@+id/btn_search_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/buttons"
            android:drawableEnd="@drawable/search_icon"
            android:drawablePadding="8dp"
            android:padding="10dp"
            android:text="بحث باسم الدكتور"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/blue" />


    </LinearLayout>


</RelativeLayout>